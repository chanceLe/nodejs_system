<!DOCTYPE html>
<html>
  <head>
    <title>welcome to payment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style media="screen">
    *{
      margin: 0;padding: 0;
    }
      h1{
    margin-top: 10%;
    display: inline-block;
    width: 100%;
    text-align: center;
    margin-bottom: 30px;
      }
      p{
        text-align: center;
        font-size: 16px;
      }
      form{
        text-align: center;
        border: 1px solid gray;
        width: 420px;
        height: 300px;
        padding: 50px;
        margin: 0 auto;
      }
      a{
        text-decoration: none;
        width: 170px;
        height: 28px;
        line-height: 28px;
        display: block;
        text-align: center;
      }
      form button{
        width: 170px;
        height: 30px;
      }
      form span{
        display: none;
      }
      form span i{
        color: red;
      }

      .box{
        width: 100%;

      }
      .box h2{
          display:block;
          margin: 0 auto;
          width: 520px;
        }
    </style>
  </head>
  <body>
    <h1>Create New Customer</h1>
    <p>Welcome to CustomerSystem</p>
    <% if(tip!==null){ %>
       <div class="box">
         <h2><%= tip %></h2>
       </div>
    <%}%>

    <form action="/newresult" onsubmit="return verify()" method="post">

       姓名：<input id="username" type="text"  name="name">  <br><br>
       专业：<input id="major" type="text" name="major"> <br><br>
       学习意向：<input id="intention" type="text" name="intention"> <br><br>
       电话：<input id="tel" type="number" name="tel"> <br><br>
       跟踪记录：<input type="text" id="record" name="record"> <br><br>
      <span id="tip"> <i>*</i>请填写完整信息 </span> <br><br>
      <button type="submit">创建</button>
      <button ><a href="/backshouye">返回</a></button>
    </form>

    <script type="text/javascript">
      function verify(){
        var  username= document.getElementById('username');
        var  major= document.getElementById('major');
        var  intention= document.getElementById('intention');

        var  tel= document.getElementById('tel');
        var  tips= document.getElementById('tip');

        if(!username.value || !major.value || !tel.value || !intention.value ) {
          tips.style.display = "block";
          return false;
        }else{
          return true;
        }
      }
    </script>
  </body>
</html>
